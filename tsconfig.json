{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "target": "es6",
        "moduleResolution": "node",
        "module": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "core-js", "react", "react-native",
            "react-navigation"
        ],
        "outDir": "."
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./**/*.ts", "./**/*.tsx"
    ]
}